<div class="container">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <h1 class="mt-5">パスワードリセット申請</h1>
      <%= form_with url: password_resets_path do |f| %>
        <div class="mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control"  %>
        </div>
        <div class="d-grid gap-2 col-3 mx-auto mb-5">
          <%= f.submit '申請', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .top-wrapper {
    display: none;
  }
</style>