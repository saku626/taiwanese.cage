<div class="container">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <h1 class="mt-5">ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="d-grid gap-2 col-3 mx-auto mb-5">
          <%= f.submit "ログイン", class: "btn btn-primary red" %>
        </div>
      <% end %>
        <%= link_to new_password_reset_path, class: 'senter bor' do %>
          <p>パスワードを忘れた場合はこちら</p>
        <% end %>
      <div class="border-top border-1">
       <div class="d-grid gap-2 col-4 custom-width mx-auto mt-5">
        <%= link_to '新規会員登録', new_user_path, class: "btn btn-primary green bi bi-person-fill" %>
       </div>
      </div>
    </div>
  </div>
</div>

<style>
  .top-wrapper {
    display: none;
  }
</style>