<div class="container">
  <div class="row">
    <div class=" col-md-10 col-lg-8 mx-auto">
      <h1 class="mt-5">ログイン</h1>
      <%= form_with url: login_path do |f| %>
        <div class="mb-3">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <div class="d-grid gap-2 col-3 mx-auto mb-5">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="border-top border-1">
       <div class="d-grid gap-2 col-4 mx-auto mt-5">
        <%= link_to '新規会員登録', new_user_path, class: "btn btn-primary bi bi-person-fill" %>
       </div>
      </div>
    </div>
  </div>
</div>